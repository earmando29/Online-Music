@page
@model UploadModel
@{
    ViewData["Title"] = "Upload";
}
<div class="form-container">
    <h1 class="text-center">Upload a Song or Album</h1>

    <form method="POST" enctype="multipart/form-data">
        <div>
            <label for="uploadType">Upload Type:</label>
            <select name="uploadType" id="uploadType" class="form-input">
                <option value="song">Song</option>
                <option value="album">Album</option>
            </select>
        </div>

        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required class="form-input">
        </div>

        <div>
            <label for="artist">Artist:</label>
            <input type="text" id="artist" name="artist" required class="form-input">
        </div>

        <div>
            <label for="genre">Genre:</label>
            <input type="text" id="genre" name="genre" required class="form-input">
        </div>

        <div>
            <label for="file">Select file:</label>
            <input type="file" id="file" name="file" accept="audio/*" required class="form-file">
        </div>

        <div id="album-details" style="display: none;">
            <h3>Album Details</h3>

            <div>
                <label for="albumTitle">Album Title:</label>
                <input type="text" id="albumTitle" name="albumTitle" class="form-input">
            </div>

            <div>
                <label for="albumArtist">Album Artist:</label>
                <input type="text" id="albumArtist" name="albumArtist" class="form-input">
            </div>

            <div>
                <label for="albumGenre">Album Genre:</label>
                <input type="text" id="albumGenre" name="albumGenre" class="form-input">
            </div>

            <div>
                <label for="albumArt">Album Art:</label>
                <input type="file" id="albumArt" name="albumArt" accept="image/*" class="form-file">
            </div>

            <div>
                <label for="albumYear">Year:</label>
                <input type="number" id="albumYear" name="albumYear" class="form-input">
            </div>
        </div>

        <button type="submit" class="form-submit">Submit</button>
    </form>
</div>
